<winuiEx:WindowEx
    x:Class="proyectoRefaccionaria.RegisterUserWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:winuiEx="using:WinUIEx"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Refaccionaria El Gallito - Registro"
    Width="450" Height="450">

    <Grid Padding="30" Background="{StaticResource BackgroundColorSuperDark}">
        <Border VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Background="{StaticResource BackgroundColorDark}" 
                CornerRadius="8"
                Padding="25"
                Width="350">

            <StackPanel VerticalAlignment="Center" Spacing="15">
                <FontIcon Glyph="&#xE716;" 
                          FontSize="48" 
                          HorizontalAlignment="Center"
                          Foreground="{StaticResource PrimaryColor}"/>

                <TextBlock Text="Crear Cuenta"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"
                           Foreground="{StaticResource TextColorOnAccent}"/>

                <TextBox x:Name="UsernameTextBox"
                         Header="Usuario:"
                         PlaceholderText="Elige tu nombre de usuario"
                         Foreground="{StaticResource TextControlForeground}"
                         BorderBrush="{StaticResource PrimaryColor}"
                         Background="{StaticResource BackgroundColorLight}"/>

                <PasswordBox x:Name="PasswordBox1"
                             Header="Contraseña:"
                             PlaceholderText="•••••"
                             BorderBrush="{StaticResource PrimaryColor}"
                             Background="{StaticResource BackgroundColorLight}">
                    <PasswordBox.Resources>
                        <SolidColorBrush x:Key="TextControlForeground" 
                                         Color="{StaticResource GallitoTextDark}"/>
                        <SolidColorBrush x:Key="TextControlPlaceholderForeground" 
                                         Color="{StaticResource GallitoTextMedium}"/>
                    </PasswordBox.Resources>
                </PasswordBox>

                <PasswordBox x:Name="PasswordBox2"
                             Header="Confirmar Contraseña:"
                             PlaceholderText="•••••"
                             BorderBrush="{StaticResource PrimaryColor}"
                             Background="{StaticResource BackgroundColorLight}">
                    <PasswordBox.Resources>
                        <SolidColorBrush x:Key="TextControlForeground" 
                                         Color="{StaticResource GallitoTextDark}"/>
                        <SolidColorBrush x:Key="TextControlPlaceholderForeground" 
                                         Color="{StaticResource GallitoTextMedium}"/>
                    </PasswordBox.Resources>
                </PasswordBox>

                <Button x:Name="ConfirmRegisterButton"
                        Content="Registrarme"
                        Click="ConfirmRegisterButton_Click"
                        HorizontalAlignment="Stretch" 
                        FontWeight="Bold"
                        Style="{StaticResource AccentButtonStyle}"
                        Background="{StaticResource SuccessColor}"
                        Foreground="{StaticResource TextColorOnAccent}"
                        Margin="0,10,0,0"/>

                <Button x:Name="CancelButton"
                        Content="Cancelar"
                        Click="CancelButton_Click"
                        HorizontalAlignment="Stretch" 
                        FontWeight="Bold"
                        Style="{StaticResource DefaultButtonStyle}"
                        Foreground="{StaticResource TextColorOnAccent}"
                        Background="{StaticResource BackgroundColorSuperDark}"
                        BorderBrush="{StaticResource BackgroundColorSuperDark}"
                        Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</winuiEx:WindowEx>