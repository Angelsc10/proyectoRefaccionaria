<winuiEx:WindowEx
    xmlns:local="using:proyectoRefaccionaria"
    x:Class="proyectoRefaccionaria.ViewPartsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:winuiEx="using:WinUIEx"
    Title="Visualizaci칩n de Refacciones"
    Width="700" Height="500">

    <Grid Padding="20">
        <StackPanel Spacing="10">
            <TextBlock Text="Visualizaci칩n de refacciones"
                       FontSize="22" FontWeight="Bold" />

            <!-- Filtros -->
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBox x:Name="FiltroNombre" PlaceholderText="Buscar por nombre..." Width="200"/>
                <TextBox x:Name="FiltroPrecio" PlaceholderText="Precio m치ximo..." Width="150"/>
                <Button Content="Filtrar" Click="Filtrar_Click"/>
                <Button Content="Mostrar todo" Click="MostrarTodo_Click"/>
            </StackPanel>
            <Button Content="Eliminar refacci칩n seleccionada"
                        Click="Eliminar_Click"
                        Width="250"
                        Margin="10,10,0,0"/>

            <!-- Lista de refacciones -->
            <ListView x:Name="PartsListView"
                      Height="300"
                      SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:SparePart">
                        <StackPanel Orientation="Horizontal" Spacing="20">
                            <TextBlock Text="{x:Bind Id}" Width="50"/>
                            <TextBlock Text="{x:Bind Nombre}" Width="250"/>
                            <TextBlock Text="{x:Bind Precio, Mode=OneWay}" Width="100"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</winuiEx:WindowEx>
