<winuiEx:WindowEx
    xmlns:local="using:proyectoRefaccionaria"
    x:Class="proyectoRefaccionaria.ViewPartsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:winuiEx="using:WinUIEx"
    Title="Visualización y Gestión de Refacciones"
    Width="800" Height="600">
    <Grid Padding="20">
        <StackPanel Spacing="10">
            <TextBlock Text="Gestión de refacciones"
                       FontSize="22" FontWeight="Bold" />

            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBox x:Name="FiltroNombre" PlaceholderText="Buscar por nombre..." Width="200"/>
                <TextBox x:Name="FiltroPrecio" PlaceholderText="Precio máximo..." Width="150"/>
                <Button Content="Filtrar" Click="Filtrar_Click"/>
                <Button Content="Mostrar todo" Click="MostrarTodo_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                <Button Content="Editar refacción seleccionada"
                        Click="Editar_Click"
                        Width="250"/>

                <Button Content="Eliminar refacción seleccionada"
                        Click="Eliminar_Click"
                        Width="250"
                        Background="IndianRed"/>
            </StackPanel>


            <StackPanel Orientation="Horizontal" Spacing="20" Padding="12,5,5,5" Margin="0,10,0,0" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                <TextBlock Text="ID" Width="50" FontWeight="Bold"/>
                <TextBlock Text="Nombre" Width="250" FontWeight="Bold"/>
                <TextBlock Text="Precio" Width="100" FontWeight="Bold"/>
                <TextBlock Text="Stock" Width="100" FontWeight="Bold"/>
            </StackPanel>

            <ListView x:Name="PartsListView"
                      Height="300"
                      SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:SparePart">
                        <StackPanel Orientation="Horizontal" Spacing="20">
                            <TextBlock Text="{x:Bind Id}" Width="50"/>
                            <TextBlock Text="{x:Bind Nombre}" Width="250"/>
                            <TextBlock Text="{x:Bind Precio, Mode=OneWay}" Width="100" TextAlignment="Right"/>

                            <TextBlock Text="{x:Bind Stock}" Width="100" TextAlignment="Right" FontWeight="Bold"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</winuiEx:WindowEx>
