<winuiEx:WindowEx
    x:Class="proyectoRefaccionaria.EditPartWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:winuiEx="using:WinUIEx"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:system="using:System"
    Title="Refaccionaria El Gallito - Editar Producto"
    Width="550" Height="450">

    <Grid Padding="25" Background="{StaticResource BackgroundColorSuperDark}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Editar Refacción"
                   Grid.Row="0" Grid.ColumnSpan="2"
                   FontSize="22" FontWeight="Bold"
                   Margin="0,0,0,20"
                   Foreground="{StaticResource PrimaryColor}"/>

        <TextBlock Text="Nombre de la refacción:"
                   Grid.Row="1" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,0,15,0"
                   Foreground="{StaticResource TextColorOnAccent}"/>
        <TextBox x:Name="NombreTextBox"
                 Grid.Row="1" Grid.Column="1"
                 Margin="0,5,0,5"
                 Foreground="{StaticResource TextControlForeground}"
                 BorderBrush="{StaticResource PrimaryColor}"
                 Background="{StaticResource BackgroundColorLight}"/>

        <TextBlock Text="Precio:"
                   Grid.Row="2" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,0,15,0"
                   Foreground="{StaticResource TextColorOnAccent}"/>
        <muxc:NumberBox x:Name="PrecioNumberBox"
                        Grid.Row="2" Grid.Column="1"
                        Value="0" Minimum="0"
                        SpinButtonPlacementMode="Compact"
                        SmallChange="1" LargeChange="10" Margin="0,5,0,5"
                        Foreground="{StaticResource TextControlForeground}"
                        BorderBrush="{StaticResource PrimaryColor}"
                        Background="{StaticResource BackgroundColorLight}"/>

        <TextBlock Text="Categoría:"
                   Grid.Row="3" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,0,15,0"
                   Foreground="{StaticResource TextColorOnAccent}"/>

        <ComboBox x:Name="CategoriaComboBox"
                  Grid.Row="3" Grid.Column="1"
                  PlaceholderText="Selecciona una categoría"
                  Margin="0,5,0,5" Width="Auto"
                  Foreground="{StaticResource TextColorOnAccent}"
                  Background="{StaticResource BackgroundColorDark}"
                  BorderBrush="{StaticResource BackgroundColorDark}">
            <x:String>Frenos</x:String>
            <x:String>Motor</x:String>
            <x:String>Suspensión</x:String>
            <x:String>Eléctrico</x:String>
            <x:String>General</x:String>
        </ComboBox>
        <TextBlock Text="Stock (Inventario):"
                   Grid.Row="4" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,0,15,0"
                   Foreground="{StaticResource TextColorOnAccent}"/>
        <muxc:NumberBox x:Name="StockNumberBox"
                        Grid.Row="4" Grid.Column="1"
                        Value="0" Minimum="0"
                        SpinButtonPlacementMode="Compact"
                        SmallChange="1" LargeChange="10" Margin="0,5,0,5"
                        Foreground="{StaticResource TextControlForeground}"
                        BorderBrush="{StaticResource PrimaryColor}"
                        Background="{StaticResource BackgroundColorLight}"/>

        <StackPanel Grid.Row="5" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    Spacing="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,20,0,0">

            <Button x:Name="GuardarButton"
                    Click="Guardar_Click"
                    Style="{StaticResource AccentButtonStyle}"
                    Width="180">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <SymbolIcon Symbol="Save"/>
                    <TextBlock Text="Guardar Cambios"/>
                </StackPanel>
            </Button>

            <Button x:Name="CancelarButton"
                    Click="Cancelar_Click"
                    Width="180"
                    Style="{StaticResource DefaultButtonStyle}"
                    Background="{StaticResource BackgroundColorDark}"
                    Foreground="{StaticResource TextColorOnAccent}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <SymbolIcon Symbol="Cancel"/>
                    <TextBlock Text="Cancelar"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</winuiEx:WindowEx>