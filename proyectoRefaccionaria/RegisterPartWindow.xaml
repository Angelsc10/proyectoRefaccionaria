<winuiEx:WindowEx
    x:Class="proyectoRefaccionaria.RegisterPartWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:winuiEx="using:WinUIEx"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls" 
    xmlns:system="using:System"
    Title="Refaccionaria El Gallito - Panel de Admin"
    Width="980" Height="500">

    <Grid Padding="25" Background="{StaticResource BackgroundColorSuperDark}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Registrar nueva refacción"
                   Grid.Row="0" Grid.ColumnSpan="2"
                   FontSize="22" FontWeight="Bold"
                   Margin="0,0,0,20"
                   Foreground="{StaticResource PrimaryColor}"/>

        <TextBlock Text="Nombre de la refacción:"
                   Grid.Row="1" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,0,15,0"
                   Foreground="{StaticResource TextColorOnAccent}"/>
        <TextBox x:Name="NombreTextBox"
                 Grid.Row="1" Grid.Column="1"
                 PlaceholderText="Ej. Balata delantera" Margin="0,5,0,5"
                 Foreground="{StaticResource TextControlForeground}"
                 BorderBrush="{StaticResource PrimaryColor}"
                 Background="{StaticResource BackgroundColorLight}"/>

        <TextBlock Text="Precio:"
                   Grid.Row="2" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,0,15,0"
                   Foreground="{StaticResource TextColorOnAccent}"/>
        <TextBox x:Name="PrecioTextBox"
                 Grid.Row="2" Grid.Column="1"
                 PlaceholderText="Ej. 150.50" Margin="0,5,0,5"
                 Foreground="{StaticResource TextControlForeground}"
                 BorderBrush="{StaticResource PrimaryColor}"
                 Background="{StaticResource BackgroundColorLight}"/>

        <TextBlock Text="Categoría:"
                   Grid.Row="3" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,0,15,0"
                   Foreground="{StaticResource TextColorOnAccent}"/>

        <ComboBox x:Name="CategoriaComboBox"
                  Grid.Row="3" Grid.Column="1"
                  PlaceholderText="Selecciona una categoría" Margin="0,5,0,5" Width="Auto"
                  Foreground="{StaticResource TextColorOnAccent}"
                  Background="{StaticResource BackgroundColorDark}"
                  BorderBrush="{StaticResource BackgroundColorDark}">
                <x:String>Frenos</x:String>
                <x:String>Motor</x:String>
                <x:String>Suspensión</x:String>
                <x:String>Eléctrico</x:String>
                <x:String>General</x:String>
        </ComboBox>

        <TextBlock Text="Stock Inicial:"
                   Grid.Row="4" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,0,15,0"
                   Foreground="{StaticResource TextColorOnAccent}"/>
        <muxc:NumberBox x:Name="StockTextBox"
                        Grid.Row="4" Grid.Column="1"
                        Value="0" Minimum="0"
                        SpinButtonPlacementMode="Compact"
                        SmallChange="1" LargeChange="10" Margin="0,5,0,5"
                        Foreground="{StaticResource TextControlForeground}"
                        BorderBrush="{StaticResource PrimaryColor}"
                        Background="{StaticResource BackgroundColorLight}"/>

        <StackPanel Grid.Row="5" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    Spacing="10"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">

            <Button x:Name="GuardarButton"
                    Click="Guardar_Click"
                    Style="{StaticResource AccentButtonStyle}"
                    Width="180">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <SymbolIcon Symbol="Save"/>
                    <TextBlock Text="Guardar refacción"/>
                </StackPanel>
            </Button>

            <Button x:Name="VerRefaccionesButton" 
                    Click="VerRefacciones_Click"
                    Width="180"
                    Style="{StaticResource DefaultButtonStyle}"
                    Background="{StaticResource BackgroundColorDark}"
                    Foreground="{StaticResource TextColorOnAccent}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <SymbolIcon Symbol="ViewAll"/>
                    <TextBlock Text="Ver refacciones"/>
                </StackPanel>
            </Button>

            <Button x:Name="VerReportesButton" 
                    Click="VerReportes_Click"
                    Width="180"
                    Style="{StaticResource DefaultButtonStyle}"
                    Background="{StaticResource BackgroundColorDark}"
                    Foreground="{StaticResource TextColorOnAccent}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE9F9;"/>
                    <TextBlock Text="Reporte de Ventas"/>
                </StackPanel>
            </Button>

            <Button x:Name="GestionarUsuariosButton" 
                    Click="GestionarUsuarios_Click"
                    Width="180"
                    Style="{StaticResource DefaultButtonStyle}"
                    Background="{StaticResource BackgroundColorDark}"
                    Foreground="{StaticResource TextColorOnAccent}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <SymbolIcon Symbol="People"/>
                    <TextBlock Text="Gestionar Usuarios"/>
                </StackPanel>
            </Button>

            <Button x:Name="GestionarClientesButton" 
                    Click="GestionarClientes_Click"
                    Width="180"
                    Style="{StaticResource DefaultButtonStyle}"
                    Background="{StaticResource BackgroundColorDark}"
                    Foreground="{StaticResource TextColorOnAccent}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE716;"/>
                    <TextBlock Text="Gestionar Clientes"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <Button x:Name="LogoutButton" 
                Grid.Row="6" Grid.ColumnSpan="2" 
                Click="Logout_Click"
                Width="180"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Style="{StaticResource DefaultButtonStyle}"
                Background="{StaticResource BackgroundColorDark}"
                Foreground="{StaticResource TextColorOnAccent}">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <SymbolIcon Symbol="Back"/>
                <TextBlock Text="Cerrar sesión"/>
            </StackPanel>
        </Button>
    </Grid>
</winuiEx:WindowEx>