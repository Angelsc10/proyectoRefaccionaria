<winuiEx:WindowEx
    x:Class="proyectoRefaccionaria.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:winuiEx="using:WinUIEx"
    Title="Inicio de Sesión"
    Width="450" Height="400">

    <Grid Padding="30">

        <Border VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                CornerRadius="8"
                Padding="25"
                Width="350">

            <StackPanel VerticalAlignment="Center" Spacing="15">

                <FontIcon Glyph="&#xE719;" 
                          FontSize="48" 
                          HorizontalAlignment="Center"/>

                <TextBlock Text="Iniciar Sesión"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <TextBox x:Name="UserTextBox"
                         Header="Usuario"
                         PlaceholderText="Escribe tu usuario"/>

                <PasswordBox x:Name="PasswordBox"
                             Header="Contraseña"
                             PlaceholderText="•••••"/>

                <Button Content="Iniciar Sesión"
                        Click="LogButton_Click"
                        HorizontalAlignment="Stretch" 
                        Style="{StaticResource AccentButtonStyle}"
                        Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</winuiEx:WindowEx>