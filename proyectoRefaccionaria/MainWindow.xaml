<winuiex:WindowEx
    x:Class="proyectoRefaccionaria.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:winuiex="using:WinUIEx"
    xmlns:winui="using:Microsoft.UI.Xaml"
    xmlns:local="using:proyectoRefaccionaria"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="320" Spacing="12">
            <TextBlock Text="Usuario" FontSize="14"/>
            <TextBox x:Name="UsuarioTextBox" PlaceholderText="Introduce tu usuario"/>

            <TextBlock Text="Contraseña" FontSize="14"/>
            <PasswordBox x:Name="PasswordBox" PlaceholderText="Introduce tu contraseña"/>

            <Button Content="Log" Click="LogButton_Click" HorizontalAlignment="Stretch" Margin="0,8,0,0"/>
        </StackPanel>
    </Grid>
</winuiex:WindowEx>
