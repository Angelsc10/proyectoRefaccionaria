<winuiEx:WindowEx
    x:Class="proyectoRefaccionaria.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:winuiEx="using:WinUIEx"
    Title="Refaccionaria El Gallito - Inicio de Sesión"
    Width="500" Height="600">

    <Grid Padding="30" Background="{StaticResource BackgroundColorSuperDark}">

        <Border VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Background="{StaticResource BackgroundColorDark}" 
                CornerRadius="8"
                Padding="30"
                Width="420">

            <StackPanel VerticalAlignment="Center" Spacing="15">

                <Ellipse Width="160"
                         Height="160"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,15">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="Assets/logo_completo.png"
                                    Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>

                <TextBlock Text="Refaccionaria El Gallito" 
                           FontSize="28"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,-10,0,10"
                           Foreground="{StaticResource TextColorOnAccent}"/>

                <TextBox x:Name="UserTextBox"
                         Header="Usuario"
                         PlaceholderText="Escribe tu usuario"
                         Foreground="{StaticResource TextControlForeground}"
                         BorderBrush="{StaticResource PrimaryColor}"
                         Background="{StaticResource BackgroundColorLight}"/>

                <PasswordBox x:Name="PasswordBox"
                             Header="Contraseña"
                             PlaceholderText="•••••"
                             BorderBrush="{StaticResource PrimaryColor}"
                             Background="{StaticResource BackgroundColorLight}">
                    <PasswordBox.Resources>
                        <SolidColorBrush x:Key="TextControlForeground" 
                                         Color="{StaticResource GallitoTextDark}"/>
                        <SolidColorBrush x:Key="TextControlPlaceholderForeground" 
                                         Color="{StaticResource GallitoTextMedium}"/>
                    </PasswordBox.Resources>
                </PasswordBox>

                <Button x:Name="LoginButton"
                        Content="Iniciar Sesión"
                        Click="LogButton_Click"
                        HorizontalAlignment="Stretch" 
                        Style="{StaticResource AccentButtonStyle}" 
                        Background="#0078D4"
                        Foreground="{StaticResource TextColorOnAccent}"
                        FontWeight="Bold"
                        Margin="0,10,0,0"/>

                <Button x:Name="RegisterButton"
                        Content="¿No tienes cuenta? Regístrate aquí"
                        Click="RegisterButton_Click"
                        HorizontalAlignment="Stretch"
                        Style="{StaticResource DefaultButtonStyle}"
                        Background="{StaticResource SuccessColor}"
                        Foreground="{StaticResource TextColorOnAccent}"
                        BorderBrush="{StaticResource SuccessColor}"
                        FontWeight="Bold"
                        Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</winuiEx:WindowEx>
