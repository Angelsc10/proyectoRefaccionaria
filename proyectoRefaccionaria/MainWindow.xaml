<winuiEx:WindowEx
    x:Class="proyectoRefaccionaria.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:winuiEx="using:WinUIEx"
    Title="Inicio de Sesión"
    Width="400" Height="350">

    <Grid Padding="30">
        <StackPanel VerticalAlignment="Center" Spacing="15">
            <TextBlock Text="Iniciar Sesión"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>

            <TextBox x:Name="UserTextBox"
                     Header="Usuario"
                     PlaceholderText="Escribe tu usuario"/>

            <PasswordBox x:Name="PasswordBox"
                         Header="Contraseña"
                         PlaceholderText="•••••"/>

            <Button Content="Iniciar Sesión"
                    Click="LogButton_Click"
                    HorizontalAlignment="Center"
                    Width="150"/>
        </StackPanel>
    </Grid>
</winuiEx:WindowEx>
