<winuiEx:WindowEx
    x:Class="proyectoRefaccionaria.SparePartsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:winuiEx="using:WinUIEx"
    Title="Refaccionaria - Catálogo"
    Width="700" Height="500">

    <Grid Padding="20">
        <StackPanel Spacing="10">
            <TextBlock Text="Catálogo de Refacciones" 
                       FontSize="22"
                       FontWeight="Bold" />

            <!-- Lista de refacciones disponibles -->
            <ListView x:Name="PartsListView"
                      Height="150"
                      SelectionMode="Single"
                      DisplayMemberPath="Nombre"/>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Content="Agregar al carrito" Click="AddToCart_Click" Width="150"/>
                <Button Content="Eliminar producto del catálogo" Click="EliminarProducto_Click" Width="220"/>
            </StackPanel>

            <TextBlock Text="Carrito de compra" 
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="0,20,0,0"/>

            <!-- Lista del carrito -->
            <ListView x:Name="CartListView"
                      Height="150"
                      SelectionMode="Single"
                      DisplayMemberPath="Nombre"/>

            <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                <Button Content="Quitar del carrito" Click="RemoveFromCart_Click" Width="150"/>
                <Button Content="Confirmar compra" Click="ConfirmPurchase_Click" Width="150"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</winuiEx:WindowEx>
